{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": false,
    "moduleResolution": "node",
    "allowJs": false,
    "noUnusedLocals": true,
    "declaration": true,
    "resolveJsonModule": true,
    "strictNullChecks": true
  },
  "include": [
    "src/**/*",
    "src/**/*.json"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
